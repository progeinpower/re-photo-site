<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<title>{SITE_TITLE}</title>
		
		<style>
			/* --- 1. DESIGN TOKENS --- */
			:root {
				--accent: #0f172a;      /* Deep Navy */
				--accent-blue: #3b82f6; /* Bright Blue */
				--gold: #d97706;        /* Gold */
				--text-main: #1e293b;
				--text-muted: #64748b;
				--bg-light: #f8fafc;
				--white: #ffffff;
				--shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
			}

			html { scroll-behavior: smooth; }

			body {
				margin: 0;
				font-family: system-ui, -apple-system, sans-serif;
				background: var(--bg-light);
				color: var(--text-main);
				line-height: 1.6;
			}
			
			h1, h2, h3 { margin: 0; line-height: 1.2; letter-spacing: -0.02em; }
			h2 { font-size: 2.25rem; text-align: center; margin-bottom: 3rem; color: var(--accent); }
			p { color: var(--text-muted); }
			
			.container { max-width: 1200px; margin: 0 auto; padding: 0 1.5rem; }
			.section-padding { padding: 6rem 0; }
			
			.btn { 
				display: inline-block; background: var(--accent-blue); color: white; 
				padding: 0.75rem 1.5rem; border-radius: 8px; text-decoration: none; 
				font-weight: 600; transition: all 0.2s; border: none; cursor: pointer;
				width: 100%; text-align: center; font-size: 0.95rem;
			}
			.btn:hover { background: #2563eb; transform: translateY(-1px); }

			/* --- 2. HEADER (New) --- */
			header {
				position: fixed; top: 0; width: 100%; z-index: 50;
				background: rgba(15, 23, 42, 0.9); backdrop-filter: blur(10px);
				border-bottom: 1px solid rgba(255,255,255,0.1);
			}
			.nav-container {
				display: flex; justify-content: space-between; align-items: center;
				height: 70px;
			}
			.logo { color: white; font-weight: 700; font-size: 1.2rem; text-decoration: none; }
			.nav-link { color: #cbd5e1; text-decoration: none; font-size: 0.9rem; margin-left: 2rem; }
			.nav-link:hover { color: white; }

			/* --- 3. HERO SECTION --- */
			.hero {
				position: relative;
				color: white;
				padding: 14rem 1.5rem 10rem; /* Adjusted for fixed header */
				text-align: center;
				background-image: url('https://images.unsplash.com/photo-1575900752464-5347bc228b8e?q=80&w=2070&auto=format&fit=crop');
				background-size: cover;
				background-position: center;
			}
			.hero::before {
				content: ''; position: absolute; inset: 0;
				background: linear-gradient(to bottom, rgba(15, 23, 42, 0.6), rgba(15, 23, 42, 0.9));
			}
			.hero-content { position: relative; z-index: 1; max-width: 800px; margin: 0 auto; }
			.hero h1 { font-size: 4rem; font-weight: 800; margin-bottom: 1.5rem; letter-spacing: -1px; }
			.hero p { font-size: 1.25rem; color: #cbd5e1; margin-bottom: 2.5rem; font-weight: 300; }
			.hero-btn { width: auto; background: white; color: var(--accent); padding: 1rem 2.5rem; }
			
			/* --- 4. SERVICES GRID --- */
			.services-grid {
				display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem;
			}
			.service-card {
				background: var(--white); padding: 2rem; border-radius: 16px;
				box-shadow: var(--shadow); border: 1px solid rgba(255,255,255,0.5);
				transition: transform 0.2s;
			}
			.service-card:hover { transform: translateY(-5px); }
			
			.badge {
				display: inline-block; padding: 0.25rem 0.75rem; border-radius: 50px;
				font-size: 0.75rem; font-weight: 700; letter-spacing: 0.05em; margin-bottom: 1rem;
				text-transform: uppercase;
			}
			.badge-gold { background: #fef3c7; color: var(--gold); }
			.badge-blue { background: #dbeafe; color: var(--accent-blue); }
			.service-card h3 { font-size: 1.25rem; margin-bottom: 0.75rem; color: var(--accent); }

			/* --- 5. CALCULATOR & PRICING --- */
			.calc-grid {
				display: grid; grid-template-columns: repeat(4, 1fr); gap: 1.5rem; align-items: stretch;
			}
			.pricing-card {
				background: var(--white); padding: 2rem; border-radius: 16px;
				border: 1px solid #e2e8f0; display: flex; flex-direction: column; transition: all 0.2s;
			}
			.pricing-card.popular {
				border: 2px solid var(--accent-blue); position: relative;
				box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.15); transform: scale(1.02); z-index: 10;
			}
			
			.price-tag { font-size: 2.5rem; font-weight: 800; color: var(--accent); margin: 1rem 0; }
			.features { list-style: none; padding: 0; margin: 0 0 2rem 0; flex-grow: 1; }
			.features li { margin-bottom: 0.75rem; font-size: 0.9rem; color: var(--text-muted); display: flex; align-items: center; }
			.features li::before { content: "✓"; color: var(--accent-blue); font-weight: bold; margin-right: 0.5rem; }
			.features li.missing { color: #cbd5e1; }
			.features li.missing::before { content: "✕"; color: #cbd5e1; }

