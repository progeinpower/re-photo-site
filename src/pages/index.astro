---
const SITE_TITLE = "Ali Shibly | Real Estate Photography";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<title>{SITE_TITLE}</title>
		
		<style>
			/* --- 1. DESIGN TOKENS --- */
			:root {
				--accent: #0f172a;      /* Deep Navy (Professional) */
				--accent-blue: #3b82f6; /* Bright Blue (Highlights) */
				--gold: #d97706;        /* Gold (Premium badges) */
				--text-main: #1e293b;
				--text-muted: #64748b;
				--bg-light: #f8fafc;
				--white: #ffffff;
				--shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
			}

			body {
				margin: 0;
				font-family: system-ui, -apple-system, sans-serif;
				background: var(--bg-light);
				color: var(--text-main);
				line-height: 1.6;
			}
			
			h1, h2, h3 { margin: 0; line-height: 1.2; letter-spacing: -0.02em; }
			h2 { font-size: 2.25rem; text-align: center; margin-bottom: 3rem; color: var(--accent); }
			p { color: var(--text-muted); }
			
			.container { max-width: 1200px; margin: 0 auto; padding: 0 1.5rem; }
			.section-padding { padding: 6rem 0; }
			
			.btn { 
				display: inline-block; background: var(--accent-blue); color: white; 
				padding: 0.75rem 1.5rem; border-radius: 8px; text-decoration: none; 
				font-weight: 600; transition: all 0.2s; border: none; cursor: pointer;
				width: 100%; text-align: center; font-size: 0.95rem;
			}
			.btn:hover { background: #2563eb; transform: translateY(-1px); }

			/* --- 2. HERO SECTION (Transparent & Polished) --- */
			.hero {
				position: relative;
				color: white;
				padding: 12rem 1.5rem;
				text-align: center;
				/* Winnipeg Skyline Placeholder */
				background-image: url('https://images.unsplash.com/photo-1575900752464-5347bc228b8e?q=80&w=2070&auto=format&fit=crop');
				background-size: cover;
				background-position: center;
			}
			/* The polished dark overlay */
			.hero::before {
				content: '';
				position: absolute;
				inset: 0;
				background: linear-gradient(to bottom, rgba(15, 23, 42, 0.7), rgba(15, 23, 42, 0.85));
			}
			.hero-content { position: relative; z-index: 1; max-width: 800px; margin: 0 auto; }
			.hero h1 { font-size: 4rem; font-weight: 800; margin-bottom: 1.5rem; letter-spacing: -1px; }
			.hero p { font-size: 1.25rem; color: #cbd5e1; margin-bottom: 2.5rem; font-weight: 300; }
			.hero-btn { width: auto; background: white; color: var(--accent); }
			.hero-btn:hover { background: #f1f5f9; }

			/* --- 3. SERVICES GRID --- */
			.services-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 2rem;
			}
			.service-card {
				background: var(--white);
				padding: 2rem;
				border-radius: 16px;
				box-shadow: var(--shadow);
				border: 1px solid rgba(255,255,255,0.5);
				transition: transform 0.2s;
				position: relative;
			}
			.service-card:hover { transform: translateY(-5px); }
			
			.badge {
				display: inline-block;
				padding: 0.25rem 0.75rem;
				border-radius: 50px;
				font-size: 0.75rem;
				font-weight: 700;
				letter-spacing: 0.05em;
				margin-bottom: 1rem;
				text-transform: uppercase;
			}
			.badge-gold { background: #fef3c7; color: var(--gold); }
			.badge-blue { background: #dbeafe; color: var(--accent-blue); }

			.service-card h3 { font-size: 1.25rem; margin-bottom: 0.75rem; color: var(--accent); }
			.service-card p { font-size: 0.95rem; line-height: 1.5; }

			/* --- 4. CALCULATOR & PRICING --- */
			.calc-grid {
				display: grid;
				grid-template-columns: repeat(4, 1fr);
				gap: 1.5rem;
				align-items: stretch;
			}
			
			.pricing-card {
				background: var(--white);
				padding: 2rem;
				border-radius: 16px;
				border: 1px solid #e2e8f0;
				display: flex;
				flex-direction: column;
				transition: all 0.2s;
			}
			.pricing-card.popular {
				border: 2px solid var(--accent-blue);
				position: relative;
				box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.15);
				transform: scale(1.02);
				z-index: 10;
			}
			
			.price-tag { font-size: 2.5rem; font-weight: 800; color: var(--accent); margin: 1rem 0; }
			.price-tag span { font-size: 1rem; color: var(--text-muted); font-weight: normal; }
			
			.features { list-style: none; padding: 0; margin: 0 0 2rem 0; flex-grow: 1; }
			.features li { 
				margin-bottom: 0.75rem; font-size: 0.9rem; color: var(--text-muted); 
				display: flex; align-items: center; 
			}
			.features li::before {
				content: "✓"; color: var(--accent-blue); font-weight: bold; margin-right: 0.5rem;
			}
			.features li.missing { color: #cbd5e1; }
			.features li.missing::before { content: "✕"; color: #cbd5e1; }

			/* The Interactive Custom Card */
			.custom-card {
				background: var(--accent); /* Dark background for contrast */
				color: white;
				border: 1px solid var(--accent);
			}
			.custom-card h3 { color: white; }
			.custom-card .price-tag { color: white; }
			
			.custom-options { display: flex; flex-direction: column; gap: 0.75rem; margin-bottom: 2rem; flex-grow: 1; }
			.custom-checkbox {
				display: flex; justify-content: space-between; align-items: center;
				padding: 0.75rem; background: rgba(255,255,255,0.1); border-radius: 8px;
				cursor: pointer; transition: background 0.2s;
			}
			.custom-checkbox:hover { background: rgba(255,255,255,0.2); }
			.custom-checkbox input { accent-color: var(--accent-blue); transform: scale(1.2); }
			.custom-checkbox span { font-size: 0.9rem; }

			/* Responsive */
			@media (max-width: 1024px) {
				.calc-grid { grid-template-columns: repeat(2, 1fr); }
				.pricing-card.popular { transform: none; }
			}
			@media (max-width: 640px) {
				.hero h1 { font-size: 2.5rem; }
				.calc-grid { grid-template-columns: 1fr; }
				.services-grid { grid-template-columns: 1fr; }
			}
		</style>
	</head>
	<body>
		
		<section class="hero">
			<div class="hero-content">
				<h1>Real Estate Photography<br>Done Right.</h1>
				<p>Premium HDR photos, cinematic drone video, and immersive 3D tours in Winnipeg. Book your shoot instantly online.</p>
				<a href="#pricing" class="btn hero-btn">Get Started</a>
			</div>
		</section>

		<section class="container section-padding">
			<h2>Premium Services</h2>
			<div class="services-grid">
				<div class="service-card">
					<span class="badge badge-gold">Slideshow</span>
					<h3>HDR Photography</h3>
					<p>Wide-angle interior and exterior shots balanced for perfect light and color.</p>
				</div>
				<div class="service-card">
					<span class="badge badge-blue">Video</span>
					<h3>Drone Aerials</h3>
					<p>4K cinematic video and high-res photos from the sky to highlight the location.</p>
				</div>
				<div class="service-card">
					<div style="height: 25px;"></div> <h3>3D Virtual Tours</h3>
					<p>Matterport-style walkthroughs that let buyers explore every corner remotely.</p>
				</div>
				<div class="service-card">
					<div style="height: 25px;"></div> <h3>Floor Plans</h3>
					<p>Professional 2D layouts with measurements for absolute clarity.</p>
				</div>
			</div>
		</section>

		<section id="pricing" class="bg-light section-padding">
			<div class="container">
				<h2>Simple Pricing</h2>
				
				<div class="calc-grid">
					
					<div class="pricing-card">
						<h3>Starter</h3>
						<div class="price-tag">$150</div>
						<ul class="features">
							<li>HDR Photos (25)</li>
							<li class="missing">Drone Aerials</li>
							<li class="missing">3D Tour</li>
						</ul>
						<button class="btn" style="background: #e2e8f0; color: var(--accent);" onclick="setBundle('starter')">Select Starter</button>
					</div>

					<div class="pricing-card popular">
						<div style="position: absolute; top: -12px; left: 50%; transform: translateX(-50%); background: var(--accent-blue); color: white; padding: 2px 12px; font-size: 0.75rem; font-weight: bold; border-radius: 20px;">MOST POPULAR</div>
						<h3>Pro</h3>
						<div class="price-tag">$225</div>
						<ul class="features">
							<li>HDR Photos (25)</li>
							<li>Drone Aerials</li>
							<li class="missing">3D Tour</li>
						</ul>
						<button class="btn" onclick="setBundle('pro')">Select Pro</button>
					</div>

					<div class="pricing-card">
						<h3>Premium</h3>
						<div class="price-tag">$350</div>
						<ul class="features">
							<li>HDR Photos (40)</li>
							<li>Drone Aerials</li>
							<li>3D Tour</li>
						</ul>
						<button class="btn" style="background: #e2e8f0; color: var(--accent);" onclick="setBundle('premium')">Select Premium</button>
					</div>

					<div class="pricing-card custom-card">
						<h3>Custom Build</h3>
						<div class="price-tag">$<span id="live-total">0</span></div>
						
						<div class="custom-options">
							<label class="custom-checkbox">
								<span>HDR Photos</span>
								<input type="checkbox" id="cb-photos" value="150" onchange="calc()">
							</label>
							<label class="custom-checkbox">
								<span>Drone Add-on</span>
								<input type="checkbox" id="cb-drone" value="75" onchange="calc()">
							</label>
							<label class="custom-checkbox">
								<span>3D Virtual Tour</span>
								<input type="checkbox" id="cb-tour" value="125" onchange="calc()">
							</label>
							<label class="custom-checkbox">
								<span>Floor Plan</span>
								<input type="checkbox" id="cb-floor" value="50" onchange="calc()">
							</label>
						</div>
						
						<button class="btn" style="background: white; color: var(--accent);">Book Custom</button>
					</div>

				</div>
			</div>
		</section>

		<script>
			const cbPhotos = document.getElementById('cb-photos');
			const cbDrone = document.getElementById('cb-drone');
			const cbTour = document.getElementById('cb-tour');
			const cbFloor = document.getElementById('cb-floor');
			const totalDisplay = document.getElementById('live-total');

			function setBundle(type) {
				// 1. Reset all
				cbPhotos.checked = false;
				cbDrone.checked = false;
				cbTour.checked = false;
				cbFloor.checked = false;

				// 2. Apply Bundle Logic
				if (type === 'starter') {
					cbPhotos.checked = true;
				} else if (type === 'pro') {
					cbPhotos.checked = true;
					cbDrone.checked = true;
				} else if (type === 'premium') {
					cbPhotos.checked = true;
					cbDrone.checked = true;
					cbTour.checked = true;
				}

				// 3. Recalculate
				calc();
			}

			function calc() {
				let total = 0;
				if (cbPhotos.checked) total += parseInt(cbPhotos.value);
				if (cbDrone.checked) total += parseInt(cbDrone.value);
				if (cbTour.checked) total += parseInt(cbTour.value);
				if (cbFloor.checked) total += parseInt(cbFloor.value);
				
				// Animate/Update the number
				totalDisplay.innerText = total;
			}
			
			// Initialize
			calc();
		</script>
	</body>
</html>
