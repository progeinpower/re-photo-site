---
const SITE_TITLE = "Ali Shibly | Real Estate Photography";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<title>{SITE_TITLE}</title>
		
		<style>
			/* --- GLOBAL STYLES --- */
			:root {
				--accent: #2563eb; /* Blue */
				--accent-dark: #1e40af;
				--dark: #1e293b;   /* Dark slate */
				--light: #f8fafc;  /* Light gray bg */
				--white: #ffffff;
				--text-gray: #64748b;
				--red-label: #ff3b30; /* Red for labels */
			}
			body {
				margin: 0;
				font-family: system-ui, -apple-system, sans-serif;
				background: var(--light);
				color: var(--dark);
				line-height: 1.6;
			}
			h1, h2, h3 { margin-top: 0; line-height: 1.2; }
			h2 { font-size: 2.5rem; text-align: center; margin-bottom: 1.5rem; }
			.container { max-width: 1100px; margin: 0 auto; padding: 0 1.5rem; }
			.section-padding { padding: 5rem 0; }
			.btn { 
				display: inline-block; background: var(--accent); color: white; 
				padding: 0.8rem 1.5rem; border-radius: 50px; text-decoration: none; 
				font-weight: bold; transition: background 0.2s; border: none; cursor: pointer;
				width: 100%; font-size: 0.9rem;
			}
			.btn:hover { background: var(--accent-dark); }

			/* --- HERO SECTION --- */
			.hero {
				position: relative;
				color: white;
				padding: 10rem 1.5rem;
				text-align: center;
				overflow: hidden;
				background-color: var(--dark);
			}
			.hero::before {
				content: '';
				position: absolute;
				top: 0; left: 0; width: 100%; height: 100%;
				/* Winnipeg Skyline Placeholder */
				background-image: url('https://images.unsplash.com/photo-1575900752464-5347bc228b8e?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
				background-size: cover;
				background-position: center;
				opacity: 0.25;
				z-index: 0;
			}
			.hero-content { position: relative; z-index: 1; }
			.hero h1 { font-size: 3.5rem; font-weight: 800; margin-bottom: 1rem; }
			.hero p { font-size: 1.25rem; color: #cbd5e1; max-width: 600px; margin: 0 auto 2rem auto; }
			.hero .btn { width: auto; }

			/* --- SERVICES GRID --- */
			.services-grid {
				display: grid;
				grid-template-columns: repeat(4, 1fr);
				gap: 1.5rem;
			}
			.service-card {
				background: var(--white);
				padding: 2rem;
				border-radius: 12px;
				box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
				border: 1px solid #e2e8f0;
				position: relative;
				overflow: hidden;
			}
			.service-card h3 { font-size: 1.25rem; margin-bottom: 1rem; }
			.service-card p { font-size: 0.95rem; color: var(--text-gray); }
			
			/* Red Labels (Slideshow, Video) */
			.label-red {
				position: absolute;
				top: 1rem;
				right: -2rem;
				background: var(--red-label);
				color: white;
				padding: 0.25rem 3rem;
				font-size: 0.8rem;
				font-weight: bold;
				transform: rotate(45deg);
				text-transform: uppercase;
			}
			
			/* --- QUOTE CALCULATOR --- */
			#quote-tool { background: var(--white); }
			.calculator-grid {
				display: grid;
				grid-template-columns: repeat(4, 1fr);
				gap: 1.5rem;
				margin-top: 3rem;
			}
			.calc-card {
				background: var(--white);
				padding: 2rem;
				border-radius: 12px;
				box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
				border: 2px solid transparent;
				text-align: center;
				display: flex;
				flex-direction: column;
				justify-content: space-between;
			}
			.calc-card h3 { margin-bottom: 0.5rem; font-size: 1.1rem; }
			.price { font-size: 1.75rem; font-weight: 800; color: var(--accent); display: block; margin: 1rem 0; }
			.features-list { list-style: none; padding: 0; margin: 0 0 1.5rem 0; color: var(--text-gray); font-size: 0.9rem; text-align: left; }
			.features-list li { margin-bottom: 0.5rem; display: flex; align-items: center; }
			.features-list li span { margin-right: 0.5rem; }

			/* Custom Reacts Card */
			.custom-card { border-color: var(--red-label); position: relative; }
			.reacts-label {
				position: absolute;
				top: -15px;
				left: 50%;
				transform: translateX(-50%);
				background: var(--red-label);
				color: white;
				padding: 0.3rem 1.5rem;
				font-weight: bold;
				border-radius: 4px;
				text-transform: uppercase;
				letter-spacing: 1px;
			}
			.checkbox-group { text-align: left; margin-bottom: 1.5rem; }
			.checkbox-label {
				display: flex;
				align-items: center;
				margin-bottom: 0.75rem;
				cursor: pointer;
				font-size: 0.9rem;
			}
			.checkbox-label input { margin-right: 0.75rem; accent-color: var(--red-label); transform: scale(1.2); }
			.total-display { margin-top: auto; padding-top: 1rem; border-top: 1px solid #e2e8f0; }
			.total-label { display: block; font-size: 0.9rem; color: var(--text-gray); margin-bottom: 0.5rem; }
			.total-price { font-size: 2rem; font-weight: 800; color: var(--red-label); }

			/* Highlight "Most Popular" */
			.popular-card { border-color: var(--accent); transform: scale(1.05); z-index: 1; }

			@media (max-width: 900px) {
				.services-grid, .calculator-grid { grid-template-columns: repeat(2, 1fr); }
			}
			@media (max-width: 600px) {
				.services-grid, .calculator-grid { grid-template-columns: 1fr; }
			}
		</style>
	</head>
	<body>
		
		<section class="hero">
			<div class="hero-content">
				<h1>Ali Shibly<br>Real Estate Photography</h1>
				<p>Capturing Winnipeg's finest properties. Premium HDR photography, drone aerials, and immersive virtual tours to sell listings faster.</p>
				<a href="#quote-tool" class="btn">Get an Instant Quote</a>
			</div>
		</section>

		<section class="section-padding container">
			<h2>Our Premium Services</h2>
			<div class="services-grid">
				<div class="service-card">
					<span class="label-red">SLIDESHOW</span>
					<h3>Interior & Exterior Photos</h3>
					<p>Stunning wide-angle HDR photos that showcase the true flow, space, and light of every room.</p>
				</div>
				<div class="service-card">
					<span class="label-red">VIDEO</span>
					<h3>Aerial Drone Imagery</h3>
					<p>Highlight the property's location, lot size, and surrounding neighborhood from a unique perspective.</p>
				</div>
				<div class="service-card">
					<h3>3D Virtual Tours</h3>
					<p>Create an immersive 24/7 open house experience, allowing buyers to walk through from anywhere.</p>
				</div>
				<div class="service-card">
					<h3>Floor Plan</h3>
					<p>2D FLOOR PLAN FOR CLARITY</p>
				</div>
			</div>
		</section>

		<section id="quote-tool" class="section-padding">
			<div class="container">
				<h2>Build Your Custom Package</h2>
				<p style="text-align: center; margin-bottom: 3rem; color: var(--text-gray);">Select a popular bundle to start, or pick individual services below.</p>
				
				<div class="calculator-grid">
					<div class="calc-card">
						<h3>Starter</h3>
						<span class="price">$150</span>
						<ul class="features-list">
							<li><span>✅</span> Interior & Exterior Photos</li>
							<li><span>❌</span> Drone Aerials</li>
							<li><span>❌</span> 3D Virtual Tour</li>
						</ul>
						<button class="btn" onclick="selectBundle('starter')">Select Starter</button>
					</div>
					<div class="calc-card popular-card">
						<h3 style="color: var(--accent);">Most Popular</h3>
						<span class="price">$225</span>
						<ul class="features-list">
							<li><span>✅</span> Interior & Exterior Photos</li>
							<li><span>✅</span> Drone Aerials</li>
							<li><span>❌</span> 3D Virtual Tour</li>
						</ul>
						<button class="btn" onclick="selectBundle('popular')">Select Pro</button>
					</div>
					<div class="calc-card">
						<h3>Premium</h3>
						<span class="price">$350</span>
						<ul class="features-list">
							<li><span>✅</span> Interior & Exterior Photos</li>
							<li><span>✅</span> Drone Aerials</li>
							<li><span>✅</span> 3D Virtual Tour</li>
						</ul>
						<button class="btn" onclick="selectBundle('premium')">Select Premium</button>
					</div>
					<div class="calc-card custom-card">
						<span class="reacts-label">REACTS</span>
						<h3>CUSTOM</h3>
						<div class="checkbox-group" style="margin-top: 1.5rem;">
							<label class="checkbox-label">
								<input type="checkbox" id="cb-photos" value="150" onchange="calculateTotal()">
								Interior & Exterior Photos
							</label>
							<label class="checkbox-label">
								<input type="checkbox" id="cb-drone" value="75" onchange="calculateTotal()">
								Drone Aerials
							</label>
							<label class="checkbox-label">
								<input type="checkbox" id="cb-tour" value="125" onchange="calculateTotal()">
								3D Virtual Tour
							</label>
						</div>
						<div class="total-display">
							<span class="total-label">Estimated Total</span>
							<span class="total-price">$<span id="total-price">0</span></span>
						</div>
					</div>
				</div>

			</div>
		</section>

		<script>
			const cbPhotos = document.getElementById('cb-photos');
			const cbDrone = document.getElementById('cb-drone');
			const cbTour = document.getElementById('cb-tour');
			const totalPriceSpan = document.getElementById('total-price');

			// 1. Function to select a bundle
			function selectBundle(type) {
				// Reset all
				cbPhotos.checked = false;
				cbDrone.checked = false;
				cbTour.checked = false;

				// Check according to bundle
				if (type === 'starter') {
					cbPhotos.checked = true;
				} else if (type === 'popular') {
					cbPhotos.checked = true;
					cbDrone.checked = true;
				} else if (type === 'premium') {
					cbPhotos.checked = true;
					cbDrone.checked = true;
					cbTour.checked = true;
				}
				
				// Recalculate total
				calculateTotal();
			}

			// 2. Function to calculate the total price
			function calculateTotal() {
				let total = 0;
				if (cbPhotos.checked) total += parseInt(cbPhotos.value);
				if (cbDrone.checked) total += parseInt(cbDrone.value);
				if (cbTour.checked) total += parseInt(cbTour.value);

				// Update the total display
				totalPriceSpan.innerText = total;
			}

			// Initialize total on load
			calculateTotal();
		</script>

	</body>
</html>